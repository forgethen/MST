*
  margin: 0
  padding: 0
  outline none

R($target)
  $context = 16
  $target / $context * 1rem

body
  font-weight: 400
  font-style: normal
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  font-feature-settings: 'pnum' on, 'lnum' on
  font-size: R(16)
  line-height: 1.2
  display flex
  flex-direction column
  align-items flex-start
  justify-content space-between
  background-color: #282829
  // row-gap: R(100)
  overflow-x: hidden;
  min-height: 100dvh;
  width: 100%
  position: relative
  overflow-x: hidden;

a
  text-decoration: none
  cursor: pointer
  color: #38535D
  font-weight: 400
  &:hover
    text-decoration: underline

form
  .custom-placeholder::placeholder
    color: #55565A /* Красный цвет */

  /* Для поддержки старых версий браузеров */
  .custom-placeholder::-webkit-input-placeholder /* Chrome, Safari */
    color: #55565A

  .custom-placeholder::-moz-placeholder /* Firefox */
    color: #55565A

  .custom-placeholder:-ms-input-placeholder /* Internet Explorer */
    color: #55565A

  .custom-placeholder:-moz-placeholder/* Firefox до версии 18 */
    color: #55565A
  input[type="text"], input[type="tel"], input[type="email"]
    display: flex
    align-items: center
    padding R(14) R(20) R(14) R(20)
    box-sizing: border-box
    font-size: R(24)
    font-size: clamp(R(15), 1vw + 1rem, R(24))
    font-weight: 400
    line-height: 1.5
    border: R(2) solid #D6D6D6
    border-radius: R(4)
    margin-bottom: R(14)
    white-space: pre
    color: #282829
    &:active, &:focus, &:hover
      border: R(2) solid #D5C9BE
    &:hover
      box-shadow: 0 0 R(8) rgba(213, 201, 190, .5)
  input[type="submit"]
    height: R(100)
    border: R(2) solid #282829
    width: 100%
    cursor: pointer
    background-color: #282829
    color: #FFFFFF
    @media screen and (max-width: 992px)
      height: R(64)
    @media screen and (max-width: 767px)
      height: R(48)
    &:hover
      transform: none
      color: #282829
      background-color: #FFFFFF
    &:active
      transform: none
      background-color: #282829
      color: #FFFFFF
  .checked__wrapper
    display: flex
    align-items: center
    margin: R(26) 0
  .checker
    flex none
    margin-right: R(17)
    cursor: pointer
    display: block
    height: R(24)
    border: R(2) solid #405D65
    width R(24)
    border-radius: R(4)
    box-sizing: border-box
    position: relative
    & + span
      font-size: R(16)
      font-size: clamp(R(15), 1vw + 1rem, R(16))
      line-height: 1.25
    &:hover
      border: R(2) solid #D5C9BE
      box-shadow: 0 0 R(8) rgba(213, 201, 190, .5)
    span
      position: absolute
      font-size: R(36)
      font-weight: 400
      line-height: 1
      color: #38535d
      top -11px
      left: 1.5px
      opacity: 0
  input[type="checkbox"]:checked + .checker    
    border R(2) solid #d5c9be
  input[type="checkbox"]:checked + .checker span
    opacity: 1

.logo
  flex none
  height: R(36)
  background-image: url("./assets/images/Vector.svg")
  width R(200)
  background-position: center center
  background-repeat: no-repeat
  background-size: contain
  // font-family: "Prata"
  // font-size: R(36)
  // font-size: clamp(R(30), 1.5vw + 1rem, R(36))
  // line-height: 1
  // font-weight: 400
  // letter-spacing: .03
  // text-transform: uppercase
  // color: #ffffff
  // span
  // font-weight: 700

.button
  display: flex
  align-items: center
  justify-content: center
  box-sizing: border-box
  text-transform: uppercase
  border-radius: R(4)
  transition: all .125s ease-in-out
  background-color: #ffffff
  color: #222222
  min-width R(200)
  width auto
  height: R(80)
  font-size: R(24)
  font-size: clamp(R(20), 1vw + 1rem, R(24))
  font-weight: 700
  line-height: 0
  letter-spacing: .04
  padding: 0 R(24)
  @media screen and (max-width: 992px)
    height: R(64)
  @media screen and (max-width: 767px)
    height: R(56)
  &:hover
    text-decoration: none
    box-shadow: 0 0 R(18) rgba(255, 255, 255, .5)
    // transform: scale(1.1)
  &:active
    box-shadow: none
    // transform: scale(0.95)

ul, ol
  list-style none

header, main, footer, section
  width 100%

.container
  max-width: R(1630)
  width 100%
  margin: 0 auto
  padding: 0 R(15)
  box-sizing: border-box

footer, .banner, .penultimate
